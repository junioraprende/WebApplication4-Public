<!--recibo lista del contralador CategoriaController para mostrarla-->
@model IEnumerable<WebApplication4.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Categoria</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary">Nueva Categoria</a>          
        </div>

    </div>
    <br />

    <!--ahora pregunto si el modelo que recibo tiene datos-->
    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="text-center ">
                    <th>
                        Nombre Categoria
                    </th>
                    <th>
                        Orden
                    </th>
                    <th>
                        Editar / Eliminar
                    </th>
                </tr>


            </thead>
            <tbody>
                <!--Este foreach es el encargado de recorrer la tabla-->
                @*Este foreach recorre el modelo*@
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="50%">@item.NombreCategoria</th>
                        <th width="30%">@item.MostrarOrden</th>
                        <th class="text-center">
                            <!--aqui van los botones, se pondran mas adelante-->
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Categoria" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-success mx-2">Editar</a>
                                <a asp-controller="Categoria" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Eliminar</a>
                            </div>

                        </th>
                    </tr>
                }
            </tbody>

        </table>
        <!--En caso de no encontrar datos se crea else-->
    }
    else 
    {
        <p>No hay registros de categoria</p>
    }

</div>
<!--recibo lista para mostrarla-->
@model IEnumerable<WebApplication4.Models.TipoAplicacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Tipos de Aplicación</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TipoAplicacion" asp-action="Crear" class="btn btn-primary">Nueva Tipo</a>          
        </div>

    </div>
    <br />

    <!--ahora pregunto se el código que recibo tiene datos-->
    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre 
                    </th>
                 
                    <th>
                    </th>
                </tr>


            </thead>
            <tbody>
                <!--Este foreach es el encargado de recorrer la tabla-->
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="50%">@item.Nombre</th>
                        
                        <th>
                            <!--aqui van los botones, se pondran mas adelante-->
                        </th>
                    </tr>
                }
            </tbody>

        </table>
        <!--En caso de no encontrar datos se crea else-->
    }
    else 
    {
        <p>No hay registros de Tipo de Aplicación</p>
    }

</div>